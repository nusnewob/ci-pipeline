{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Project",
  "description": "A DIT project pipeline definition",
  "type": "object",
  "required": ["name", "namespace", "scm", "environments"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "The unique identifier for a project",
      "type": "string"
    },
    "namespace": {
      "description": "Team of the project",
      "type": "string"
    },
    "scm": {
      "description": "Project repository",
      "type": "string"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "minProperties": 1,
        "additionalProperties": false,
        "required": ["environment", "type", "app", "vars", "secrets"],
        "properties": {
          "environment": {
            "description": "Target environment",
            "type": "string"
          },
          "type": {
            "description": "Platform type",
            "type": "string",
            "enum": ["gds", "s3", "ecs"]
          },
          "app": {
            "description": "Destination app name",
            "type": "string"
          },
          "region": {
            "description": "PaaS region",
            "type": "string",
            "enum": ["eu-west-1", "eu-west-2"]
          },
          "vars": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "secrets": {
            "type": "boolean"
          },
          "run": {
            "type": "array"
          }
        }
      }
    }
  }
}
